<body>
    <form action="">
      <h1>Caculator</h1>
      <input type="text" id="num1" placeholder="...nhập">
      <input type="text" id="num2" placeholder="...nhập">
      <br><br>
    </form>
    <div id="calc">
      <button onclick="sum()">Addition(+)</button>
      <button onclick="subtract()">Subtraction(-)</button>
      <button onclick="multiply()">Multiplication(X)</button>
      <button onclick="divide()">Division(/)</button>
    </div>
    <div id="result"></div>
</body>
<script>
  function sum(){
    let num1 = parseInt(document.getElementById("num1").value);
    let num2 = parseInt(document.getElementById("num2").value);

    let result = num1 + num2;
    document.getElementById("result").innerHTML = "result: " + result;
  }
  function subtract(){
    let num1 = parseInt(document.getElementById("num1").value);
    let num2 = parseInt(document.getElementById("num2").value);

    let result = num1 - num2;
    document.getElementById("result").innerHTML = "result: " + result;
  }
  function multiply(){
    let num1 = parseInt(document.getElementById("num1").value);
    let num2 = parseInt(document.getElementById("num2").value);

    let result = num1 * num2;
    document.getElementById("result").innerHTML = "result: " + result;
  }
  function divide() {
    let num1 = parseInt(document.getElementById("num1").value);
    let num2 = parseInt(document.getElementById("num2").value);

    let result = num1 / num2;
    document.getElementById("result").innerHTML = "result: " + result;
  }

</script>
</html>
