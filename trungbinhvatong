<script>
  let vatli = prompt("nhap diem vatli ");
  let hoahoc = prompt("nhap diem hoa hoc");
  let sinhhoc = prompt("nhap diem sinhhoc");
  vatli = parseFloat(vatli);
  hoahoc = parseFloat(hoahoc);
  sinhhoc = parseFloat(sinhhoc);
  let diem_trung_binh  = (vatli + hoahoc + sinhhoc) / 3;
  let tong = vatli + hoahoc + sinhhoc;
  document.write("diem trung b√¨nh = " + diem_trung_binh +"<br/>");
  document.write("diem tong =" + tong);
</script>
